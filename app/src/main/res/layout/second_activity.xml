<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/secondPhotoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/secondFilmName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/secondFilmName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="@string/film_name"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/secondFilmDescription"
        app:layout_constraintEnd_toEndOf="@+id/secondPhotoImageView"
        app:layout_constraintStart_toStartOf="@+id/secondPhotoImageView"
        app:layout_constraintTop_toBottomOf="@+id/secondPhotoImageView" />

    <TextView
        android:id="@+id/secondFilmDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:text="@string/description_films"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/secondFilmName"
        app:layout_constraintStart_toStartOf="@id/secondFilmName"
        app:layout_constraintTop_toBottomOf="@id/secondFilmName" />


</androidx.constraintlayout.widget.ConstraintLayout>